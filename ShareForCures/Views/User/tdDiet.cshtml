                            }));
                        });
                        grid.refresh();
                        $("#itemId").val(0);
                        $("#parentItemId").val(0);

                    }
                }
           , error: function (xmlHttpRequest, status, err) { alert(err); kendo.ui.progress(wnd.element, false); }
            });
        }
    }
    

