    function Add_Edit_Nutrients(parentId,item) {
        var _title = "";
        if (item == 0) {
            _title = "Add New Nutrient";
        } else {
            _title = "Edit Nutrient ";
        }
        wnd = $("#AddEditNutrient");
        wnd.kendoWindow({
            modal: false,
            visible: false,
            width: 450,
            resizable: false
        }).data("kendoWindow").center();
        wnd = wnd.data("kendoWindow");
        wnd.title(_title);
        wnd.open();
        kendo.ui.progress(wnd.element, true);
        var ddl_Nutrient = $("#ddl_Nutrient").data("kendoDropDownList");
        var ddl_NutrientUOM = $("#ddl_NutrientUOM").data("kendoDropDownList");

        if (item.ID > 0) // Edit Mode
        {
            kendo.ui.progress(wnd.element, false);
            //Start - Load Data sources
            ddl_Nutrient.dataSource.read();
            ddl_Nutrient.value(item.NutrientID);

            ddl_NutrientUOM.dataSource.read();
            ddl_NutrientUOM.value(item.UOMID);

            $("#txt_nutrient_value").val(item.Value);

            // End - Load Data sources
            // Set Hidden Fields
            $("#itemId").val(item.ID);
            $("#parentItemId").val(item.UserDietID);

            var validator = $("#AddEditNutrient").kendoValidator().data("kendoValidator");
            validator.validate();

        } else {
            kendo.ui.progress(wnd.element, false);
            //Start - Load Data sources

            $("#itemId").val(0);
            $("#parentItemId").val(parentId);
            $("#txt_nutrient_value").val(0);

            ddl_Nutrient.dataSource.read();
            ddl_Nutrient.value(0);

            ddl_NutrientUOM.dataSource.read();
            ddl_NutrientUOM.value(0);

            // End - Load Data sources
            var validator = $("#AddEditNutrient").kendoValidator().data("kendoValidator");
            validator.hideMessages();
        }
    }

    function SaveSubItem() {
        var validator = $("#AddEditNutrient").kendoValidator().data("kendoValidator");
        var ddl_Nutrient = $("#ddl_Nutrient").data("kendoDropDownList");
        var ddl_NutrientUOM = $("#ddl_NutrientUOM").data("kendoDropDownList");

        if (validator.validate()) {
            kendo.ui.progress(wnd.element, true);
            var NewItem = new Object();
            NewItem.ID = $("#itemId").val();
            NewItem.UserDietID = $("#parentItemId").val();
            NewItem.UOMID = ddl_NutrientUOM.value();
            NewItem.NutrientID = ddl_Nutrient.value();
            NewItem.Value = $("#txt_nutrient_value").val();

            jQuery.ajax({
                type: "POST",
                async: true,
                url: "SaveUserDietNutrient",
                contentType: "application/json; charset=utf-8", // we are sending in JSON format so we need to specify this
                dataType: "json", // the data type we want back, so text.  The data will come wrapped in xml
                data: JSON.stringify({ 'model': NewItem }), // the data in JSON format.  Note it is *not* a JSON object, is is a literal string in JSON format
                success: function (retval) {
                    kendo.ui.progress(wnd.element, false);
                    if (retval == "SUCCESS") {
                        wnd.close();
                        var grid = $("#grid").data("kendoGrid");
                        
                        var expanded = $.map(grid.tbody.children(":has(> .k-hierarchy-cell .k-minus)"), function (row) {
